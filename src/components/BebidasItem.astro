---
interface Bebida {
    tamaño: string;
    nombre: string;
    imagen: string;
    descripcion: string;
}

const {
    class: ClassName,
    tamaño, 
    nombre, 
    imagen,
    descripcion
} = Astro.props;

---

<div class={`${ClassName} bg-gray-900 rounded-xl shadow-lg overflow-hidden border border-gray-700 p-3 flex flex-col items-center w-full`}>
    <div class="w-24 h-24 bg-gray-800 rounded-lg shadow-md border border-gray-700 mb-2">
        <img src={imagen} alt={descripcion} class="w-full h-full object-cover rounded-lg">
    </div>
    <div class="text-center">
        <p class="text-gray-300 text-lg font-medium leading-tight">{nombre}</p>
        <p class="text-gray-300 text-lg font-medium leading-tight">{tamaño}</p>
    </div>
</div>