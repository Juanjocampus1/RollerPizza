---
import EntrantesItem from "./EntrantesItem.astro";
import PostresItem from "./PostresItem.astro";
import { entrantes, Postres } from "./Utils/EntrantesPostres";
---

<div class="flex flex-col gap-y-10 mt-5 ml-40 mr-40">
    <div class="border-b-2 border-gray-700">
        <h2 class="text-gray-800 text-2xl font-extrabold uppercase tracking-wide text-center">Entrantes</h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        {
            entrantes.map((item, index) => (
                <EntrantesItem {...item} class=""/>
        ))
        }
    </div>
