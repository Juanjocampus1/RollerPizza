---
import Layout from '../layouts/Layout.astro';
import Navbar from '../layouts/Navbar.astro';

import SectionContainer from '../components/SectionContainer.astro';
import Carousel from '../components/Carousel.astro';
import Titles from '../components/Titles.astro';
import Buttons from '../components/Buttons.astro';
import CreaTuPizza from '../components/CreaTuPizza.astro';
import Localizaciones from '../components/Localizaciones.astro';

---

<Layout title='Roller Pizza' description='disfruta de las mejores pizzas de todo madrid'>
	<Navbar class="z-20"/>
	<main>
		<Carousel class="flex flex-row "/>
		<SectionContainer id="menu" class="gap-y-20" >
			<Titles title="NUESTRO MENU"/>
		</SectionContainer>
		<SectionContainer>
			<Buttons/>
		</SectionContainer>
		<CreaTuPizza/>
		<SectionContainer id="timetable" class="gap-y-20" >
			<Titles title="DONDE ESTAMOS"/>
		</SectionContainer>
		<Localizaciones/>
		<SectionContainer id="timetable" class="gap-y-20" >
			<Titles title="OPINIONES"/>
		</SectionContainer>
	</main>
</Layout>
